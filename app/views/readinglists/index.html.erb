<p style="color: green"><%= notice %></p>

<h1>Readinglists</h1>
  <div class="card shadow mt-3" >
    <div class="card-header">
    </div>
    <div class="card-body">
      <%= search_form_for(
            @search,
            html: {
              data: {
                turbo_frame: "readinglist-list",
                controller: "form",
                action: "input->form#submit",
              },
            },
          ) do |f| %>
        <div class="row py-2 border-top">
          <div class="row py-2">
            <div class="col-2 my-auto"" >
              <%= f.label :readstatus_id, style: "display: block" %>
              <%= f.select :readstatus_id_eq, options_from_collection_for_select(@readstatus_list, :id, :name, 1), include_blank: true %>
            </div>

            <div class="col-2 my-auto"" >
              <%= f.label :date, style: "display: block" %>
              <%= f.date_field :date_eq %>
            </div>
            
            <div class="col-2 my-auto"" >
              <%= f.label :title_cont, "title" %>
              <%= f.search_field :title_cont %>
            </div>

            <div class="col-2 my-auto"" >
              <%= f.label :shape, style: "display: block" %>
              <%= f.select :readstatus_id_eq, options_from_collection_for_select(@shape_list, :id, :name, 1), include_blank: true %>
            </div>

            <div class="col-4 d-flex align-items-end" >
              <%= f.submit "検索", class: "btn btn-outline-secondary" %>
              <%= link_to "クリア", readinglists_path, class: "btn btn-outline-secondary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card-body mx-3">
    <%= turbo_frame_tag "readinglist-list" do %>
      <div class="row py-2">
        <div class="col-4 mt-auto">
          <%= sort_link(@search, :readstatus_id) %>
        </div>
        <div class="col-4 mt-auto">
          <%= sort_link(@search, :date) %>
        </div>
        <div class="col-4 mt-auto">
          <%= sort_link(@search, :title) %>
        </div>
        <div class="col-4 mt-auto">
          <%= sort_link(@search, :shape_id) %>
        </div>
        <div class="col-4 d-flex justify-content-end">
          <%= link_to icon_with_text("plus-circle", "登録"),
                      new_readinglist_path,
                      class: "btn btn-outline-primary",
                      data: { turbo_frame: dom_id(Readinglist.new) } %>
        </div>
      </div>

      <%= turbo_frame_tag Readinglist.new %>

      <div id="readinglists">
        <%= render @readinglists %>
      </div>

      <div class="d-flex justify-content-end mt-3">
        <%= paginate @readinglists %>
      </div>
    <% end %>
  </div>
