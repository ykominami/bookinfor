<%= bootstrap_form_with(model: inst) do |form| %>
  <div class="row py-2 border-top">
    <div class="col-1" %>
      <%= form.select :readstatus_id, readstatus_list %>

    </div>

    <div class="col-1 my-auto">
      <%= form.select :category_id, category_list %>
    </div>
    <div class="col-3 my-auto">
      <%= form.label inst.title %>
    </div>
    <div class="col-1 my-auto">
      <%= form.label inst.publisher %>
    </div>
    <div class="col-2 my-auto">
      <%= inst.author %>
    </div>
    <div class="col-2 my-auto">
      <%= inst.purchase_date %>
    </div>


  <div class="col-2 my-auto">
    <div class="d-flex justify-content-end">
      <%= form.primary "更新" , {class: "btn btn-sm btn-outline-primary me-2"} %>
      <%= link_to "取消", kindlelist_path(inst), class: "btn btn-sm btn-outline-secondary me-2" %>
    </div>
  </div>
<% end %>
