<%= form_with(model: kindlelist) do |form| %>
  <div class="row py-2 border-top">
    <% if kindlelist.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(kindlelist.errors.count, "error") %> prohibited this kindlelist from being saved:</h2>

        <ul>
          <% kindlelist.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="col py-2 border-top">
  <div class="col-1 my-auto" >
    <%= form.text_field :asin %>
  </div>

  <div class="col-1 my-auto" >
    <%= form.text_field :title %>
  </div>

  <div class="col-1 my-auto" >
    <%= form.text_field :publisher %>
  </div>

  <div class="col-2 my-auto" >
    <%= form.text_field :author %>
  </div>

  <div class="col-1 my-auto" >
    <%= form.select :readstatus_id, options_from_collection_for_select(readstatus_list, :id, :name, kindlelist.readstatus_id), include_blank: false %>
  </div>

  <div class="col-1 my-auto">
    <%= form.select :readstatus_id, options_from_collection_for_select(category_list, :id, :name, kindlelist.category_id), include_blank: false %>
  </div>

  <div class="col-2 my-auto" >
    <%= form.date_field :publish_date, kindlelist.publish_date %>
  </div>

  <div class="col-2 my-auto" >
    <%= form.date_field :purchase_date %>
  </div>
  <div class="col-2 my-auto">
    <div class="d-flex justify-content-end">
      <%= form.submit "登録", { class: "btn btn-sm btn-outline-primary me-2" } %>
      <%= link_to "取消", kindlelists_path, class: "btn btn-sm btn-outline-secondary me-2" %>

    </div>
  </div>

  </div>
  </div>
<% end %>
